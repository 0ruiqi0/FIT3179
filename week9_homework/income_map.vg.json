{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1200,
  "height": 630,
  "title": {
    "text": "Malaysia - Mean Income by State (2022)",
    "fontSize": 22,
    "fontWeight": "bold"
  }
,

  "data": {
    "url": "dataset/mys_adm1.topo.json",
    "format": { "type": "topojson", "feature": "adm1" }   
  },

  "transform": [
    {
      "lookup": "properties.shapeName",                   
      "from": {
        "data": { "url": "dataset/hies_state.csv", "format": { "type": "csv" } },
        "key": "state",
        "fields": ["state","income_mean","income_median","gini","poverty"]
      }
    }
  ],

  "projection": {
    "type": "mercator",
    "center": [109, 3],
    "scale": 3300
  },


  "layer": [
    {
      "data": { "graticule": { "step": [5, 5] } },
      "mark": { "type": "geoshape", "stroke": "#e6e6e6", "strokeWidth": 0.5, "filled": false }
    },
    {
      "mark": { "type": "geoshape", "stroke": "#666", "strokeWidth": 0.5 },
      "encoding": {
        "color": {
          "field": "income_mean",
          "type": "quantitative",
          "title": "Mean income (MYR)",
          "scale": { "scheme": "blues" }
        },
        "tooltip": [
          { "field": "properties.shapeName", "title": "State (geo)" },
          { "field": "state", "title": "State (CSV)" },
          { "field": "income_mean", "title": "Mean income (MYR)", "format": ",.0f" },
          { "field": "income_median", "title": "Median income (MYR)", "format": ",.0f" },
          { "field": "gini", "title": "Gini" },
          { "field": "poverty", "title": "Poverty (%)" }
        ]
      }
    },
    {
      "data": {
        "values": [
          { "name": "Perlis",              "lon": 100.20, "lat": 6.60 },
          { "name": "Kedah",               "lon": 100.40, "lat": 6.20 },
          { "name": "Penang",              "lon": 100.30, "lat": 5.35 },
          { "name": "Perak",               "lon": 101.00, "lat": 4.85 },
          { "name": "Selangor",            "lon": 101.45, "lat": 3.35 },
          { "name": "KL",                  "lon": 101.69, "lat": 3.14 },
          { "name": "Putrajaya",           "lon": 101.68, "lat": 2.93 },
          { "name": "Negeri Sembilan",     "lon": 102.10, "lat": 2.70 },
          { "name": "Melaka",              "lon": 102.25, "lat": 2.25 },
          { "name": "Johor",               "lon": 103.50, "lat": 1.85 },
          { "name": "Pahang",              "lon": 103.30, "lat": 3.80 },
          { "name": "Terengganu",          "lon": 103.10, "lat": 5.20 },
          { "name": "Kelantan",            "lon": 102.20, "lat": 6.10 },
          { "name": "Sarawak",             "lon": 112.50, "lat": 2.60 },
          { "name": "Sabah",               "lon": 116.50, "lat": 5.30 },
          { "name": "Labuan",              "lon": 115.24, "lat": 5.32 }
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 11,
        "fontWeight": "normal",
        "fill": "#000000" 
      },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude":  { "field": "lat", "type": "quantitative" },
        "text":       { "field": "name", "type": "nominal" }
      }
    }


  ],

  "config": {
    "legend": {
      "orient": "right",
      "labelFontSize": 14,
      "titleFontSize": 16
    },
    "view": { "stroke": null }
}

}